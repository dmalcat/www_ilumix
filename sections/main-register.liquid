<section class="customer-page section-ptb">
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="acc-form">
          <div class="log-acc-page">
            <div class="acc-page">
              <div class="registers">
                {% form 'create_customer' %}
                <div class="login-form-container">
                  <div class="title-text">
                    <h2>{{ 'customer.register.title' | t }}</h2>
                    {% if settings.register_sub_text != '' %}
                    <p>{{ settings.register_sub_text }}</p>
                    {% endif %}
                  </div>
                  {{ form.errors | default_errors }}
                  <ul class="fill-form">
                    <li class="fname">
                      <input type="text" name="customer[first_name]" id="FirstName" class="input-full" placeholder="{{ 'customer.register.first_name' | t }}" {% if form.first_name %}value="{{ form.first_name }}"{% endif %} autocapitalize="words" autofocus required>
                      <i class="feather-user"></i>
                    </li>

                    <li class="lname">
                      <input type="text" name="customer[last_name]" id="LastName" class="input-full" placeholder="{{ 'customer.register.last_name' | t }}" {% if form.last_name %}value="{{ form.last_name }}"{% endif %} autocapitalize="words" required>
                      <i class="feather-user-plus"></i>
                    </li>

                    <li class="log-email">
                      <input bss-b2b-is-email-field type="email" name="customer[email]" id="Email" class="input-full{% if form.errors contains 'email' %} error{% endif %}" placeholder="{{ 'customer.register.email' | t }}" {% if form.email %} value="{{ form.email }}"{% endif %} autocorrect="off" autocapitalize="off" required>
                      <i class="feather-mail"></i>
                    </li>
                    <li>
                      <input type="text" id="BusinessName" name="customer[note][Název firmy]" placeholder="Název firmy" class="input-full">
                    </li>
                    <li>
                      <input type="text" id="BusinessAddress" name="customer[note][Adresa firmy]" placeholder="Adresa firmy" class="input-full">
                    </li>
                    <li>
                      <input type="text" id="ICO" name="customer[note][IČO]" placeholder="IČO" class="input-full">
                    </li>
                    <li>
                      <input type="text" id="DIC" name="customer[note][DIČ]" placeholder="DIČ" class="input-full">
                    </li>
                    <li class="log-pwd">
                      <input type="password" name="customer[password]" id="CreatePassword" class="input-full{% if form.errors contains 'password' %} error{% endif %}" placeholder="{{ 'customer.register.password' | t }}" required>
                      <i class="feather-lock"></i>
                    </li>
                  </ul>
                  <div class="form-action-button">
                    <button class="btn btn-style7" type="submit">{{ 'customer.register.submit' | t }}</button>
                  </div>
                </div>
                {% endform %}
              </div>
              <div class="acc-wrapper">
                <h6>{{ settings.alredy_acc_title }}</h6>
                <div class="account-optional-action">
                  {{ 'layout.customer.log_in' | t | customer_login_link }}
                  {% comment %}<a href="{{ shop.url }}">{{ 'customer.register.cancel' | t }}</a>{% endcomment %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<style>
  .breadcrumb-area{
    display:none;
  }
  .customer-page .acc-form{
    max-width: 40%;
    margin: 0 auto;
  }
  .customer-page .acc-form .logo{
    text-align: center;
  }
  .customer-page .log-acc-page .login-form-container .title-text{
    text-align: center;
    margin-bottom: 60px;
  }
  .customer-page .log-acc-page .login-form-container .title-text h2 {
    font-size: 40px;
    text-transform: uppercase;
    line-height: 1;
  }
  .customer-page .log-acc-page .login-form-container p{
    margin-top: 15px;
    font-size: 18px;
    line-height: 1;
    font-weight: 400;
  }
  @media (max-width: 1199px){
    .customer-page .acc-form{
      max-width: 50%;
    }
  }
  @media (max-width: 991px){
    .customer-page .acc-form{
      max-width: 70%;
    }
  }
  @media (max-width: 767px){
    .customer-page .acc-form{
      max-width: 100%;
    }
    .customer-page .log-acc-page .login-form-container .title-text{
      margin-bottom: 30px;
    }
    .customer-page .log-acc-page .login-form-container .title-text h2{
      font-size: 24px;
    }
    .customer-page .log-acc-page .login-form-container p{
      font-size: 14px;
    }
  }

  /* form css */
  .customer-page .log-acc-page .login-form-container ul.fill-form li{
    margin-top: 15px;
    position: relative;
    display: flex;
    align-items: center;
  }
  .customer-page .log-acc-page .login-form-container ul.fill-form li:first-child{
    margin-top: 0px;
  }
  .customer-page .log-acc-page .login-form-container input{
    font-size: 16px;
    font-weight: 400;
    height: 56px;
    padding: 0 40px;
    background-color: #fbfbfb;
    border-color: #efefef;
    padding-left: 60px;
  }
  .customer-page .log-acc-page .login-form-container ul.fill-form li i{
    position: absolute;
    font-size: 20px;
    left: 30px;
  }
  .customer-page .log-acc-page .login-form-container .form-action-button{
    margin-top: 40px;
    text-align: center;
  }
  .customer-page .log-acc-page .login-form-container .form-action-button a{
    {% if settings.enable_rtl %}
    margin-right: 15px;
    {% else %}
    margin-left: 15px;
    {% endif %}
  }
  @media(max-width: 767px){
    .customer-page .log-acc-page .login-form-container .form-action-button{
      margin-top: 30px;
    }
    .customer-page .log-acc-page .login-form-container input{
      font-size: 14px;
      height: 50px;
      padding: 0 15px;
    }
    .customer-page .log-acc-page .login-form-container ul.fill-form li i{
      right: 15px;
      font-size: 18px;
    }
  }

  /* acc-link css */
  .customer-page .log-acc-page .acc-wrapper{
    margin-top: 60px;
    text-align: center;
  }
  .customer-page .log-acc-page .acc-wrapper h6{
    font-size: 18px;
    line-height: 1;
    text-transform: uppercase;
  }
  .customer-page .log-acc-page .acc-wrapper .account-optional-action{
    margin-top: 20px;
  }
  .customer-page .log-acc-page .acc-wrapper .account-optional-action a{
    font-size: 16px;
    font-weight: 500;
    line-height: 1;
    color: {{ settings.color_primary }};
    border-bottom: 3px solid {{ settings.color_primary }};
    text-transform: capitalize;
    padding-bottom: 3px;
  }
  .customer-page .log-acc-page .acc-wrapper .account-optional-action a:hover{
    color: {{ settings.color_primary }};
  }
  @media(max-width: 767px){
    .customer-page .log-acc-page .acc-wrapper h6{
      font-size: 14px;
    }
    .customer-page .log-acc-page .acc-wrapper .account-optional-action{
      margin-top: 10px;
    }
    .customer-page .log-acc-page .acc-wrapper .account-optional-action a{
      font-size: 14px;
    }
    .customer-page .log-acc-page .acc-wrapper{
      margin-top: 30px;
    }
  }

  /* error css */
  .customer-page .log-acc-page .errors{
    padding: 10px 15px;
    {% if settings.enable_rtl %}
    text-align: right;
    {% else %}
    text-align: left;
    {% endif %}
  }
  .customer-page .log-acc-page .errors ul{
    {% if settings.enable_rtl %}
    margin-right: 15px;
    margin-left: 0;
    {% else %}
    margin-left: 15px;
    {% endif %}
    list-style: square;
  }
  .customer-page .log-acc-page .errors ul li{
    margin-top: 5px;
  }
  .customer-page .log-acc-page .errors ul li:first-child{
    margin-top: 0px;
  }
</style>{% include 'bss-b2b-wholesaler-default-login-form' %}