<section class="contact-store-information">
	<div class="container">
		<div class="row">
			<div class="col-xl-12 col-center">
			    
          <div class="row">
			    	<div class="contact-store-title wow animate__fadeIn">
                {% if section.settings.contact_drop_title != '' %}
                <h2>{{ section.settings.contact_drop_title }}</h6>
                {% endif %}
            </div>
			    </div>

          <div class="row">
			    	<div class="col-xl-12 info-list-col">
			    		<div class="info-list">
			    			<ul class="info_wrap">
			    				<li class="info_wrapper wow animate__fadeIn">
			    					<div class="info-block">
			    						<div class="icon">
			    							{{ section.settings.info_icon1 }}
			    						</div>
			    						<div class="text-block">
		    								<h6>{{ section.settings.info_title1 }}</h6>
		    								<a href="tel:{{ section.settings.info_link1 }}">{{ section.settings.info_link1 }}</a>
			    						</div>
			    					</div>
			    				</li>
			    				<li class="info_wrapper wow animate__fadeIn">
			    					<div class="info-block">
			    						<div class="icon">
			    							{{ section.settings.info_icon2 }}
			    						</div>
			    						<div class="text-block">
		    								<h6>{{ section.settings.info_title2 }}</h6>
		    								<a href="mailto:{{ section.settings.info_link2 }}">{{ section.settings.info_link2 }}</a>
			    						</div>
			    					</div>
			    				</li>
			    				<li class="info_wrapper wow animate__fadeIn">
			    					<div class="info-block">
			    						<div class="icon">
			    							{{ section.settings.info_icon3 }}
			    						</div>
			    						<div class="text-block">
		    								<h6>{{ section.settings.info_title3 }}</h6>
		    								<a href="{{ section.settings.info_link3_url }}">{{ section.settings.info_link3 }}</a>
			    						</div>
			    					</div>
			    				</li>
			    			</ul>
			    		</div>
			    	</div>
			    </div>
		    </div>
	    </div>
	</div>
</section>
