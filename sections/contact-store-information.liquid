<style type="text/css">
    .contact-store-information {
        padding-top: {{ section.settings.section_padding_top }}px;
        padding-bottom: {{ section.settings.section_padding_bottom }}px;
    }
    @media (max-width: 1199px){
        .contact-store-information {
            padding-top: {{ section.settings.section_padding_top_ipad }}px;
            padding-bottom: {{ section.settings.section_padding_bottom_ipad }}px;
        }
    }
    @media (max-width: 767px){
        .contact-store-information {
            padding-top: {{ section.settings.section_padding_top_xs }}px;
            padding-bottom: {{ section.settings.section_padding_bottom_xs }}px;
        }
    }

    /*section title*/
    .contact-store-title h2 {
      font-size: 40px;
      font-weight: 600;
      text-align: center;
      margin-bottom: 50px
    }
    
    @media(max-width: 1199px){
    	.contact-store-title h6{
			font-size: 26px;
    	}
    }
    @media(max-width: 767px){
    	.contact-store-title{
    		text-align: center;
    	}
      .contact-store-title h2 {
        font-size: 24px;
      }

    	.contact-store-title h6{
			font-size: 20px;
    	}
    }

    .info-list-col {
		display: flex;
		align-items: center;
    }
    .info-list-col .info-list{
	    width: 100%;
    } 
    /*information block*/
    .info-list ul.info_wrap{
    	display: flex;
    	align-items: center;
    	-ms-flex-wrap: nowrap;
	    flex-wrap: nowrap;
	    overflow-x: auto;
	    scrollbar-width: thin;
	    -webkit-scrollbar-width: thin;
    }
    .info-list ul.info_wrap::-webkit-scrollbar{
    	height: 1px;
    }
    .info-list ul.info_wrap li.info_wrapper:nth-child(2){
      animation-delay: 0.2s;
    }
    .info-list ul.info_wrap li.info_wrapper:nth-child(3){
      animation-delay: 0.3s;
    }
    .info-list ul li .info-block{
    	display: flex;
    	align-items: center;
    }
    .info-list ul li .info-block .icon svg{
    	width: 38px;
    	height: 38px;
    	stroke: {{ settings.color_primary }};
    }
    .info-list ul li .info-block .text-block h6{
    	font-size: 20px;
      margin-bottom: 10px;
    }
    .info-list ul li .info-block .text-block a{
    	font-size: 16px;
    	padding-top: 3px;
    	display: inline-block;
    	border-bottom: 2px solid #c5c5c5;
      color: #6f6f6f;
    }

    .info-list ul li .info-block .text-block a:hover{
    	border-bottom: 2px solid #6f6f6f;
      color: #232323;
      transition: all 300ms ease-in-out;
    }

    @media(max-width: 1199px){
    	.info-list ul li .info-block .text-block h6{
	    	font-size: 18px;
    	}
    }
    @media(max-width: 767px){
    	.info-list-col{
    		padding-top: 30px;
    	}
    	.info-list ul li .info-block .text-block h6{
	    	font-size: 16px;
    	}
    	.info-list ul li .info-block .text-block p{
    		font-size: 14px;
    	}
    }
</style>