<section class="slider-content">
    <div class="home-slider-main">
        <div class="home-slider swiper-container home-slider" id="home-slider">
            <div class="swiper-wrapper">
            {% for block in section.blocks %}
            <div class="swiper-slide">
                <div class="slide-image{% if block.settings.slider_content_position == "right" %} slider-content-right{% else %} slider-content-left{% endif %}">
                    <div class="slide-image-cont">
                        <img class="img-fluid" src="{% if block.settings.slider_bg_img %}{{ block.settings.slider_bg_img | img_url: 'master' }}{% else %}https://dummyimage.com/1920x1033/f7f7f7/999999{% endif %}">
                        <div class="slider-text-info{% if block.settings.slider_text_position == "right" %} slider-text-right{% elsif block.settings.slider_text_position == "left" %} slider-text-left{% else %} slider-text-center{% endif %}">
                            {% if block.settings.slider_title != '' %}
                            <h2 style="color:{{ block.settings.slider_title_color }};">
                                <span class="slider-subheading">{{ block.settings.slider_title1 }}</span>
                                <span>{{ block.settings.slider_title2 }}</span>
                            </h2>
                            {% endif %}
                            {% if block.settings.slider_badge != '' %}
                            <h2 class="badge-text" style="color:{{ block.settings.badge_color}}">
                                {{ block.settings.slider_badge }}
                            </h2>
                            {% endif %}
                            {% if block.settings.slider_sub_title != '' %}
                                <span class="sub-title" style="color:{{ block.settings.slider_sub_title_color }};">
                                    {{ block.settings.slider_sub_title }}
                                    <b>{{ block.settings.slider_sub_title_bold }}</b>
                                </span>
                            {% endif %}
                            <div class="button-block">
                                {% if block.settings.slider_button != '' %}
                                <a href="{{ block.settings.slider_button_url }}" class="btn btn-style8">
                                    <span>{{ block.settings.slider_button }}</span>
                                </a>
                                {% endif %}
                            </div>
                            {% if block.settings.slider_bottom_title != '' %}
                            <h6 style="color:{{ block.settings.slider_bottom_title_color }};">
                                {{ block.settings.slider_bottom_title }}
                            </h6>
                            {% endif %}              
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        <div class="swiper-pagination"><span></span></div>
        </div>
    </div>
</section>
<script>
  var swiper = new Swiper('.swiper-container#home-slider', {
    slidesPerColumn: 1,
    slidesPerView: 1,
    {%- if settings.enable_rtl -%}
    rtl: true,
    {%- endif -%}
    dots: false,
    effect: 'fade',
    navigation: {
      nextEl: '.swiper-next',
      prevEl: '.swiper-prev',
    },
    pagination: {
        el: '.swiper-pagination',
        clickable: true,
        renderBullet: function (index, className) {
            return '<span class="' + className + '">' + '0' + (index + 1) + '</span>';
        },
    }
  });
</script>
