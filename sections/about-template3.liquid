<section class="about-section3">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xl-10 col-lg-12 col-md-12 col-12 col-center">
        <ul class="about-service-wrap">
          {% for block in section.blocks %}
          <li class="about-service-wrapper wow animate__fadeInUp">
            <div class="service-block">
              <a href="javascript:void(0)">    
                <i class="{{ block.settings.service_icon }}"></i>
              </a>
              <div class="service-text">
                {%if block.settings.service_title != '' %}
                <h6>{{ block.settings.service_title }}</h6>
                {% endif %}
                {%if block.settings.service_desc != '' %}
                <p>{{ block.settings.service_desc }}</p>
                {% endif %} 
              </div>
            </div>
          </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "About Section3",
  "settings": [
  {
    "type": "header",
    "content": "Section Padding"
  },
  {
    "type" : "paragraph",
    "content" : "Desktop / Laptop"
  },
  {
    "type": "range",
    "id": "section_padding_top",
    "label": "Section Padding Top",
    "min": 0,
    "max": 100,
    "step": 5,
    "unit": "px",
    "default": 100
  },
  {
    "type": "range",
    "id": "section_padding_bottom",
    "label": "Section Padding bottom",
    "min": 0,
    "max": 100,
    "step": 5,
    "unit": "px",
    "default": 100
  },
  {
    "type" : "paragraph",
    "content" : "Ipad pro / Ipad"
  },
  {
    "type": "range",
    "id": "section_padding_top_lg",
    "label": "Section Padding Top",
    "min": 0,
    "max": 100,
    "step": 5,
    "unit": "px",
    "default": 60
  },
  {
    "type": "range",
    "id": "section_padding_bottom_lg",
    "label": "Section Padding bottom",
    "min": 0,
    "max": 100,
    "step": 5,
    "unit": "px",
    "default": 60
  },
  {
    "type" : "paragraph",
    "content" : "Mobile"
  },
  {
    "type": "range",
    "id": "section_padding_top_xs",
    "label": "Section Padding Top",
    "min": 0,
    "max": 100,
    "step": 5,
    "unit": "px",
    "default": 40
  },
  {
    "type": "range",
    "id": "section_padding_bottom_xs",
    "label": "Section Padding bottom",
    "min": 0,
    "max": 100,
    "step": 5,
    "unit": "px",
    "default": 40
  }
  ],
  "blocks":[
  {
    "type": "about_service",
    "name": "Services",
    "settings": [
    {
      "type" : "paragraph",
      "content" : "For svg icon "
    },
    {
      "type": "textarea",
      "id": "service_svg_icon",
      "label": "Svg Icon",
      "info": "Whatever you want like 'icon' or 'svg-icon' code just copy paste here feathericons.com"
    },
    {
      "type" : "paragraph",
      "content" : "For icon "
    },
    {
      "type": "text",
      "id": "service_icon",
      "label": "Icon Class"
    },
    {
      "type": "text",
      "id": "service_title",
      "label": "Service Title",
      "default": "Choose products"
    },
    {
      "type": "text",
      "id": "service_desc",
      "label": "Service Description",
      "default": "Lorem Ipsum is simply dummy text printing and typesetting"
    }
    ]
  }
  ],
  "presets":[
  {
    "name": "About Section 3",
    "category": "About us"
  }
  ]
}
{% endschema %}
<style>
  .about-section3 {
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
  }
  @media (max-width: 1199px) {
    .about-section3 {
      padding-top: {{ section.settings.section_padding_top_lg }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_lg }}px;
    }
  }
  @media (max-width: 767px) {
    .about-section3 {
      padding-top: {{ section.settings.section_padding_top_xs }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_xs }}px;
    }
  }

  /*section title*/
  .about-section3 .main-title {
    text-align: center; 
  }
  .about-section3 .main-title span{
    font-size: 18px;
    line-height: 1;
    color: {{ settings.color_primary }};
    font-weight: 500;
  }
  .about-section3 .main-title h2{
    font-size: 40px;
    font-weight: 500;
    line-height: 1;
    margin-top: 30px;
  }
  @media(max-width: 1199px){
    .about-section3 .main-title span{
      font-size: 16px;
    }
    .about-section3 .main-title h2{
      font-size: 26px;
      margin-top: 15px;
    }
  }
  @media(max-width: 767px){
    .about-section3 .main-title h2{
      font-size: 22px;
    }
  }
  /*secrvice content*/
  ul.about-service-wrap{
    display: flex;
    -ms-flex-wrap: wrap;
    flex-wrap: wrap;
    justify-content: center;
  }
  ul.about-service-wrap li{
    width: 25%;
  }
  ul.about-service-wrap li:nth-child(2){
    animation-delay: 0.2s;
  }
  ul.about-service-wrap li:nth-child(3){
    animation-delay: 0.3s;
  }
  ul.about-service-wrap li:nth-child(4){
    animation-delay: 0.4s; 
  }
  ul.about-service-wrap li.about-service-wrapper .service-block { 
    width: 70%;
    margin: 0 auto;
    text-align: center;
  }
  ul.about-service-wrap li.about-service-wrapper .service-block a{
    color: {{ settings.color_primary }};
    font-size: 35px;
    position: relative;
    overflow: hidden;
    line-height: 1;
    width: 110px;
    height: 110px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #e2e2e2;
    border-radius: 100%;
    margin: 0 auto;
  }
  ul.about-service-wrap li.about-service-wrapper .service-block a svg{
    width: 50px;
    height: 50px;
    stroke: {{ settings.color_primary }};
  }
  ul.about-service-wrap li.about-service-wrapper .service-block .service-text{
    margin-top: 60px;
  }
  ul.about-service-wrap li.about-service-wrapper .service-block h6{
    font-size: 20px;
    line-height: 1;
    font-weight: 500;
  }
  ul.about-service-wrap li.about-service-wrapper .service-block p{
    font-size: 16px;
    margin-top: 21px;
    line-height: 30px;
  }
  @media (max-width: 1599px) {
    ul.about-service-wrap li.about-service-wrapper .service-block{
      width: 100%;
    }
  }
  @media (max-width: 1199px) {
    ul.about-service-wrap{
      -ms-flex-wrap: nowrap;
      flex-wrap: nowrap;
      overflow-x: auto;
      scrollbar-width: thin;
      -webkit-scrollbar-width: thin;
    }
    ul.about-service-wrap::-webkit-scrollbar {
      height: 1px;
    }
    ul.about-service-wrap li.about-service-wrapper{
      min-width: 320px;
    }
    ul.about-service-wrap li.about-service-wrapper .service-block a{
      width: 100px;
      height: 100px;
      font-size: 30px;
    }
    ul.about-service-wrap li.about-service-wrapper .service-block h6{
      font-size: 18px;
    }
    ul.about-service-wrap li.about-service-wrapper .service-block p{
      margin-top: 11px;
    }
    ul.about-service-wrap li.about-service-wrapper .service-block .service-text{
      margin-top: 30px;
    }
  }
  @media (max-width: 767px) {
    ul.about-service-wrap li.about-service-wrapper{
      min-width: 260px;
    }
    ul.about-service-wrap li.about-service-wrapper .service-block h2{
      font-size: 40px;
    }
    ul.about-service-wrap li.about-service-wrapper .service-block .service-text p{
      font-size: 14px;
      margin-top: 11px;
    }
  }
</style>