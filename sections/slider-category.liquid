  .slider-category .cat-slider .item .category-wrap .text-content{
    bottom: 15px;
    right: 15px;
    left: 15px;
  }
  .slider-category .cat-slider .item .category-wrap .text-content h3{
    font-size: 16px;
  }
  .slider-category .cat-slider .item .category-wrap .text-content a.cat-button{
