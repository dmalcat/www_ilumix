<style>
    .video-controls{
        width: 100%;
        height: 75vh;
        object-fit: cover;
    }
    .video-container{
        position: relative;
    }
    .video-text{
        color:#fff;
        position: absolute;
        height: 100%;
        width: 100%;
        text-align: center;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        margin: auto;
        width: 90%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        z-index: 2;
    }
    .video-text p{
        font-size: 22px;
        opacity: 0.7;
        margin-bottom: 30px;
        color: #fff4d3;
    }
    .video-text h3{
        color: #fff;
    }
    .video-box{
        position: relative;
    }
    .video-overlay{
        background: rgba(0,0,0,0.4);
        height: 99.5%;
        width: 100%;
        position: absolute;
    }

    .btn {
        margin-top: 40px;
    }

    @media(max-width:900px){
        .video-text p{
            font-size: 18px;
        }   
        .video-text h3{
            font-size: 20px;
        }
    }
    @media(max-width:600px){
        .video-text{
            position: relative;
            color:black;
            margin-bottom: 30px;    
        }
        .video-text h3, .video-text p{
            color: black;
        }
        .video-overlay{
            display: none;
        }

        .btn {
            margin-top: 20px;
        }
    }
</style>
<section class="slider-category">
    <div class="video-container container-fluid category-col">
        <div class="video-text">
            <p>{{section.settings.subtitle}}</p>
            <h3>{{section.settings.title | newline_to_br}}</h3>
            {% if section.settings.button != '' %}
                <a href="{{ section.settings.button_url }}" class="btn btn-style3">
                    <span>{{ section.settings.button }}</span>
                    <i class="fa fa-long-arrow-right"></i>
                </a>
              {% endif %}
        </div>
        <div class="video-box">
            <div class="video-overlay"></div>
            <video autoplay loop muted playsinline class="video-controls">
                <source src="{{section.settings.video}}" type="video/mp4" media="(max-width:640px)">
                {% if section.settings.videoresponsive != '' %}
                <source src="{{section.settings.video}}" type="video/mp4" media="(max-width:640px)">
                {% endif %}

                <source srcset="<?php echo $baseurl ?>/assets/images/covers/clenstvi/cover_375.jpg" media="(max-width: 375px)" type="image/jpeg">
		        <source srcset="<?php echo $baseurl ?>/assets/images/covers/clenstvi/cover_540.jpg" media="(max-width: 540px)" type="image/jpeg">
            </video>
        </div>
    </div>
</section>

