       },
       {
            "id":"videoresponsive",
            "type":"text",
            "label":"Responsive video link",
            "info":"Supports mp4, YouTube and Vimeo. Only mp4 videos will play on mobile."
        },
        {
            "id":"subtitle",
            "type":"text",
            "label":"Subtitle",
            "default":"Proč ILUMIX light design?"
        },
        {
            "id":"title",
            "type":"html",
            "label":"Title"
        },
        {
            "type": "text",
            "id": "button",
            "label": "Button",
            "default": "O nás"
        },
        {
            "type": "url",
            "id": "button_url",
            "label": "Button URL"
        }
    ],
    "presets":[
       {
          "name":"Background video"
       }
    ]
 }

