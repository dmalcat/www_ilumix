<!-- our-brand-area start -->
<section class="icons-section">
    <div class="container-fluid container-col">
      <div class="icons-container" id="icons-slider">
            {% for block in section.blocks %}
            <div class="icon-col">
                 {{ block.settings.brand_image | file_url | img_tag  }}
                  <p class="icon-title">{{ block.settings.title}}</p>
                  <p>{{ block.settings.text}}</p>
              </div>
            {% endfor %}
        </div>
      </div>
    </div>
  </section>
  
  {% schema %}
  {
    "name": "Icons",
    "settings": [
    
    ],
    "blocks":[
    {
      "type": "Icon",
      "name": "Icon",
      "settings": [
      {
        "type": "text",
        "id": "brand_image",
        "label": "Icon svg (files)"
      },{
        "type": "text",
        "id": "title",
        "label": "Title"
      },{
        "type": "text",
        "id": "text",
        "label": "Text"
      }
      ]
    }
    ],
    "presets":[
    {
      "name": "Icons"
    }
    ]
  }
  {% endschema %}
  
  <style>
    .icons-section .container-col{
        border-top:1px solid rgba(0,0,0,0.1);
        border-bottom: 1px solid rgba(0,0,0,0.1);
        max-width:1600px;
        padding:50px 0;
        margin:100px auto;
    }
