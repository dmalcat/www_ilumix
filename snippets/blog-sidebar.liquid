  }
  .blog-sidebar-wrap .blog-sidebar .search-post form {
    display: flex;
    align-items: center;
    position: relative;
  }
  .blog-sidebar-wrap .blog-sidebar .search-post form input{
    border-radius: 3px;
    width: 100%;
    padding: 15px;
  }
  .blog-sidebar-wrap .blog-sidebar .search-post button{
    color: #222;
    font-size: 16px;
    position: absolute;
