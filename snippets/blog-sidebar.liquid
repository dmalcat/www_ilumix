        <h6>{{ settings.author_name }}</h6>
        <p>{{ settings.author_founder }}</p>
      </div>
    </div>
    <div class="text-content">
      <p>{{ settings.author_description }}</p>
      <div class="social-media">
        <h6>{{ settings.social_title }}</h6>
