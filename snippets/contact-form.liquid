{% form 'contact' %}
{{ form.errors | default_errors }}
<ul class="form-fill row">
  <div class="col-xl-6 col-lg-6 col-md-12 col-12">
    <li>
    <input type="text" placeholder="{{ section.settings.name_placeholder }}" class="{% if form.errors contains 'name' %}error{% endif %}" name="contact[name]" id="ContactFormName" value="{% if form.name %}{{ form.name }}{% elsif customer.name %}{{ customer.name }}{% endif %}" required>
  </li>
  <li>
    <input type="email" placeholder="{{ section.settings.email_placeholder }}" class="{% if form.errors contains 'email' %}error{% endif %}" name="contact[email]" id="ContactFormEmail" value="{% if form.email %}{{ form.email }}{% elsif customer.email %}{{ customer.email }}{% endif %}" required>
  </li>
  <li>
    <input type="text" placeholder="{{ section.settings.phone_placeholder }}" class="{% if form.errors contains 'phone' %}error{% endif %}" name="contact[phone]" id="ContactFormPhone" value="{% if form.phone %}{{ form.phone }}{% elsif customer.phone %}{{ customer.phone }}{% endif %}" required>
  </li>
  </div>
  <div class="col-xl-6 col-lg-6 col-md-12 col-12">
    <li class="h-100 textarea">
      <textarea placeholder="{{ section.settings.message_placeholder }}" class="custom-textarea h-100" name="contact[body]" id="ContactFormMessage" required>{% if form.body %}{{ form.body }}{% endif %}</textarea>
    </li>
  </div>
</ul>
<div class="contact-submit">
  <label class="read-agree">
    <input type="checkbox" class="cust-checkbox">
    <span class="agree-text">
     {{ section.settings.read_agree_text }}</span>
    <span class="cust-check"></span>
  </label>
  <button type="submit" class="btn btn-style3">
    <span>{{ section.settings.form_button_name }}</span>
  </button>
</div>
{% if form.posted_successfully? %}
<div class="post-success">
  <ul>
    <li class="text-success">{{ 'contact.form.post_success' | t }}</li>
  </ul>
</div>
{% endif %}
{% endform %}
<style>
 /* error css */
  .errors{
    margin: 30px 0 15px;
    border-radius: 0;
  }
  .errors ul{
    list-style: disc;
    {% if settings.enable_rtl %}
    margin-right: 15px;
    text-align: right;
    {% else %}
    margin-left: 15px;
    text-align: left;
    {% endif %}
  }
  @media (max-width: 767px){
    .errors{
      margin: 20px 0 15px;
    }
  }

  /* form css */
  ul.form-fill li{
    margin-top: 30px;
  }
  ul.form-fill li:first-child{
    margin-top: 0px;
  }

  ul.form-fill li textarea,
  ul.form-fill li input {
    padding: 15px 30px;
    font-size: 16px;
    border: none;
    color: #ababab;
    -webkit-box-shadow: 0 0 10px rgb(0 0 0 / 10%);
    -moz-box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    -ms-box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    box-shadow: 0 0 5px rgb(0 0 0 / 10%);
  }
  ul.form-fill li textarea::placeholder,
  ul.form-fill li input::placeholder {
    color: #ababab;
  }
  ul.form-fill li label{
    display: block;
    cursor: auto;
    margin-bottom: 10px;
    line-height: 1;
  }
  ul.form-fill li input,
  ul.form-fill li textarea{
    display: block;
    width: 100%;
  }
  .contact-submit{
    margin-top: 30px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .contact-submit label.read-agree{
    width: 50%;
    display: flex;
    margin: 0;
  }
  .contact-submit label.read-agree span.agree-text{
    font-size: 16px;
    color: #ababab;
  }

  /* success css */
  .post-success{
    font-size: 0.9em;
    padding: 6px 12px;
    margin-top: 15px;
    background-color: #f5fff7;
    border: 1px solid #28a745;
  }
  .post-success ul{
    list-style: disc;
    {% if settings.enable_rtl %}
    margin-right: 15px;
    {% else %}
    margin-left: 15px;
    {% endif %}
  }

  @media (max-width: 991px){
    ul.form-fill li.textarea,
    ul.form-fill li{
      margin-top: 15px;
    }
    .contact-submit button{
      margin-top: 15px;
    }
    .contact-submit label.read-agree{
    width: 100%;
    }
    .contact-submit{
          flex-direction: column;
    align-items: flex-start;
    }
  }
  @media (max-width: 767px){
    .contact-submit label.read-agree span.agree-text{
      font-size: 14px;
    }
  }
</style>