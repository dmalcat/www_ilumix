<section class="customer-page section-ptb">
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="acc-form">
          <div class="log-acc-page" id="CustomerLoginForm">
            <div class="acc-page">
              <div class="login">
                {% form 'customer_login' %}
                <div class="login-form-container">
                  <div class="title-text">
                    <h2>{{ 'customer.login.title' | t }}</h2>
                    {%- if settings.login_sub_text != '' -%}
                    <p>{{ settings.login_sub_text }}</p>
                    {%- endif -%}
                  </div>
                  {{ form.errors | default_errors }}
                  <ul class="fill-form">
                    <li class="log-email">
                      <input type="email" name="customer[email]" id="CustomerEmail" class="input-full{% if form.errors contains 'email' %} error{% endif %}" placeholder="{{ 'customer.login.email' | t }}" autocorrect="off" autocapitalize="off" autofocus required>
                      <i class="feather-mail"></i>
                    </li>

                    {% if form.password_needed %}
                    <li class="log-pwd">
                      <input type="password" value="" name="customer[password]" id="CustomerPassword" class="input-full{% if form.errors contains 'password' %} error{% endif %}" placeholder="{{ 'customer.login.password' | t }}" required>
                      <i class="feather-lock"></i>
                    </li>
                    {% endif %}
                  </ul>
                  <div class="form-action-button">
                    <button class="btn btn-style7" type="submit" name="submit_button">{{ 'customer.login.sign_in' | t }}</button>
                    {% if form.password_needed %}
                    <a class="btn btn-style11" href="#recover" id="RecoverPassword">{{ 'customer.login.forgot_password' | t }}</a>
                    {% endif %}
                  </div>
                  
                </div>
                {% endform %}
              </div>
              <div class="acc-wrapper">
                <h6>{{ settings.dnt_acc_title }}</h6>
                <div class="account-optional-action">
                  {{ 'layout.customer.create_account' | t | customer_register_link }}
                </div>
              </div>
            </div>
          </div>
          <div class="log-acc-page" id="RecoverPasswordForm" style="display: none;">
            <div class="acc-page">
              {% form 'recover_customer_password' %}
              {% if form.posted_successfully? %}
              {% assign resetPassword = true %}
              {% endif %}
              <div class="login-form-container">
                <div class="title-text">
                  <h2>{{ 'customer.recover_password.title' | t }}</h2>
                  <p>{{ 'customer.recover_password.subtext' | t }}</p>
                </div>
                {{ form.errors | default_errors }}
                <ul class="fill-form">
                  <li class="log-email">
                    <input type="email" value="" name="email" id="RecoverEmail" class="input-full" placeholder="{{ 'customer.recover_password.email' | t }}" autocorrect="off" autocapitalize="off" required>
                    <i class="feather-mail"></i>
                  </li>
                </ul>
                <div class="form-action-button">
                  <button class="btn btn-style7" type="submit" name="submit_button">{{ 'customer.recover_password.submit' | t }}</button>
                  <a class="btn btn-style11" href="#" id="HideRecoverPasswordLink">{{ 'customer.recover_password.cancel' | t }}</a>
                </div>
              </div>
              {% endform %}
            </div>
          </div>
        </div>
        {% if shop.checkout.guest_login %}
        <div class="log-acc-page" id="guest-login">
          <div class="login-form-container">
            <div class="title-text">
              <h2>{{ 'customer.login.guest_title' | t }}</h2>
              {% form 'guest_login' %}
              <input type="submit" value="{{ 'customer.login.guest_continue' | t }}">
              {% endform %}
            </div>
          </div>
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>
<style>
  .breadcrumb-area{
    display:none;
  }
  .customer-page .acc-form{
    max-width: 40%;
    margin: 0 auto;
  }
  .customer-page .acc-form .logo{
    text-align: center;
  }
  .customer-page .log-acc-page .login-form-container .title-text{
    text-align: center;
    margin-bottom: 60px;
  }
  .customer-page .log-acc-page .login-form-container .title-text h2 {
    font-size: 40px;
    text-transform: uppercase;
    line-height: 1;
  }
  .customer-page .log-acc-page .login-form-container p{
    margin-top: 15px;
    font-size: 18px;
    line-height: 1;
    font-weight: 400;
  }
  @media (max-width: 1199px){
    .customer-page .acc-form{
      max-width: 50%;
    }
  }
  @media (max-width: 991px){
    .customer-page .acc-form{
      max-width: 70%;
    }
  }
  @media (max-width: 767px){
    .customer-page .acc-form{
      max-width: 100%;
    }
    .customer-page .log-acc-page .login-form-container .title-text{
      margin-bottom: 30px;
    }
    .customer-page .log-acc-page .login-form-container .title-text h2{
      font-size: 24px;
    }
    .customer-page .log-acc-page .login-form-container p{
      font-size: 14px;
    }
  }

  /* form css */
  .customer-page .log-acc-page .login-form-container ul.fill-form li{
    margin-top: 15px;
    position: relative;
    display: flex;
    align-items: center;
  }
  .customer-page .log-acc-page .login-form-container ul.fill-form li:first-child{
    margin-top: 0px;
  }
  .customer-page .log-acc-page .login-form-container input{
    font-size: 16px;
    font-weight: 400;
    height: 56px;
    padding: 0 40px;
    background-color: #fbfbfb;
    border-color: #efefef;
    padding-left: 60px;
  }
  .customer-page .log-acc-page .login-form-container ul.fill-form li i{
    position: absolute;
    left: 20px;
    font-size: 20px;
  }
  .customer-page .log-acc-page .login-form-container .form-action-button{
    margin-top: 40px;
    text-align: center;
  }
  .customer-page .log-acc-page .login-form-container .form-action-button a{
    {% if settings.enable_rtl %}
    margin-right: 15px;
    {% else %}
    margin-left: 15px;
    {% endif %}
  }
  @media(max-width: 767px){
    .customer-page .log-acc-page .login-form-container .form-action-button{
      margin-top: 30px;
    }
    .customer-page .log-acc-page .login-form-container input{
      font-size: 14px;
      height: 50px;
      padding: 0 50px;
    }
    .customer-page .log-acc-page .login-form-container ul.fill-form li i{
      right: 20px;
      font-size: 18px;
    }
  }

  /* acc-link css */
  .customer-page .log-acc-page .acc-wrapper{
    margin-top: 60px;
    text-align: center;
  }
  .customer-page .log-acc-page .acc-wrapper h6{
    font-size: 18px;
    line-height: 1;
    text-transform: uppercase;
  }
  .customer-page .log-acc-page .acc-wrapper .account-optional-action{
    margin-top: 20px;
  }
  .customer-page .log-acc-page .acc-wrapper .account-optional-action a{
    font-size: 16px;
    font-weight: 500;
    line-height: 1;
    color: {{ settings.color_primary }};
    border-bottom: 3px solid {{ settings.color_primary }};
    /* text-transform: capitalize; */
    padding-bottom: 3px;
  }
  .customer-page .log-acc-page .acc-wrapper .account-optional-action a:hover{
    color: {{ settings.color_primary }};
  }
  @media(max-width: 767px){
    .customer-page .log-acc-page .acc-wrapper h6{
      font-size: 14px;
    }
    .customer-page .log-acc-page .acc-wrapper .account-optional-action{
      margin-top: 10px;
    }
    .customer-page .log-acc-page .acc-wrapper .account-optional-action a{
      font-size: 14px;
    }
    .customer-page .log-acc-page .acc-wrapper{
      margin-top: 30px;
    }
  }

  /* error css */
  .customer-page .log-acc-page .errors{
    padding: 10px 15px;
    {% if settings.enable_rtl %}
    text-align: right;
    {% else %}
    text-align: left;
    {% endif %}
  }
  .customer-page .log-acc-page .errors ul{
    {% if settings.enable_rtl %}
    margin-right: 15px;
    margin-left: 0;
    {% else %}
    margin-left: 15px;
    {% endif %}
    list-style: square;
  }
  .customer-page .log-acc-page .errors ul li{
    margin-top: 5px;
  }
  .customer-page .log-acc-page .errors ul li:first-child{
    margin-top: 0px;
  }
</style>