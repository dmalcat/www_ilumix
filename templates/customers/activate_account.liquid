<div class="customer-page section-ptb">
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="acc-form">
          <div class="log-acc-page">
          <div class="login">
            <div class="login-form-container">
              <div class="title-text">
                <h2>{{ 'customer.activate_account.title' | t }}</h2>
                <p>{{ 'customer.activate_account.subtext' | t }}</p>
              </div>
              <div class="login-form">
                <div class="login-form-container">
                  {% form 'activate_customer_password' %}
    
                  {{ form.errors | default_errors }}
                  <ul class="fill-form">
                    <li class="log-pwd">
                      <label for="CustomerPassword" class="hidden-label">{{ 'customer.activate_account.password' | t }}</label>
                      <input type="password" value="" name="customer[password]" id="CustomerPassword" class="input-full" placeholder="{{ 'customer.activate_account.password' | t }}">
                      <i class="feather-lock"></i>
                    </li>
                    <li class="log-pwd">
                      <label for="CustomerPasswordConfirmation" class="hidden-label">{{ 'customer.activate_account.password_confirm' | t }}</label>
                      <input type="password" value="" name="customer[password_confirmation]" id="CustomerPasswordConfirmation" class="input-full" placeholder="{{ 'customer.activate_account.password_confirm' | t }}">
                      <i class="feather-lock"></i>
                    </li>
      
                    <div class="form-action-button">
                      <button type="submit" class="btn btn-style7">{{ 'customer.activate_account.submit' | t }}</button>
                      <button type="submit" class="btn btn-style11" name="decline">{{ 'customer.activate_account.cancel' | t }}</button>
                    </div>
                  </ul>
                  {% endform %}
                </div>
  
              </div>
            </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .breadcrumb-area{
    display:none;
  }
  .customer-page .acc-form{
    max-width: 40%;
    margin: 0 auto;
  }
  .customer-page .acc-form .logo{
    text-align: center;
  }
  .customer-page .log-acc-page .login-form-container .title-text{
    text-align: center;
    margin-bottom: 60px;
  }
  .customer-page .log-acc-page .login-form-container .title-text h2 {
    font-size: 40px;
    text-transform: uppercase;
    line-height: 1;
  }
  .customer-page .log-acc-page .login-form-container p{
    margin-top: 15px;
    font-size: 18px;
    line-height: 1;
    font-weight: 400;
  }
  @media (max-width: 1199px){
    .customer-page .acc-form{
      max-width: 50%;
    }
  }
  @media (max-width: 991px){
    .customer-page .acc-form{
      max-width: 70%;
    }
  }
  @media (max-width: 767px){
    .customer-page .acc-form{
      max-width: 100%;
    }
    .customer-page .log-acc-page .login-form-container .title-text{
      margin-bottom: 30px;
    }
    .customer-page .log-acc-page .login-form-container .title-text h2{
      font-size: 24px;
    }
    .customer-page .log-acc-page .login-form-container p{
      font-size: 14px;
    }
  }

  /* form css */
  .customer-page .log-acc-page .login-form-container ul.fill-form li{
    margin-top: 15px;
    position: relative;
    display: flex;
    align-items: center;
  }
  .customer-page .log-acc-page .login-form-container ul.fill-form li:first-child{
    margin-top: 0px;
  }
  .customer-page .log-acc-page .login-form-container input{
    font-size: 16px;
    font-weight: 400;
    height: 56px;
    padding: 0 40px;
    background-color: #fbfbfb;
    border-color: #efefef;
    padding-left: 60px;
  }
  .customer-page .log-acc-page .login-form-container ul.fill-form li i{
    position: absolute;
    left: 20px;
    font-size: 20px;
  }
  .customer-page .log-acc-page .login-form-container .form-action-button{
    margin-top: 40px;
    text-align: center;
  }
  .customer-page .log-acc-page .login-form-container .form-action-button a{
    {% if settings.enable_rtl %}
    margin-right: 15px;
    {% else %}
    margin-left: 15px;
    {% endif %}
  }
  @media(max-width: 767px){
    .customer-page .log-acc-page .login-form-container .form-action-button{
      margin-top: 30px;
    }
    .customer-page .log-acc-page .login-form-container input{
      font-size: 14px;
      height: 50px;
      padding: 0 50px;
    }
    .customer-page .log-acc-page .login-form-container ul.fill-form li i{
      right: 20px;
      font-size: 18px;
    }
  }

  /* acc-link css */
  .customer-page .log-acc-page .acc-wrapper{
    margin-top: 60px;
    text-align: center;
  }
  .customer-page .log-acc-page .acc-wrapper h6{
    font-size: 18px;
    line-height: 1;
    text-transform: uppercase;
  }
  .customer-page .log-acc-page .acc-wrapper .account-optional-action{
    margin-top: 20px;
  }
  .customer-page .log-acc-page .acc-wrapper .account-optional-action a{
    font-size: 16px;
    font-weight: 500;
    line-height: 1;
    color: {{ settings.color_primary }};
    border-bottom: 3px solid {{ settings.color_primary }};
    /* text-transform: capitalize; */
    padding-bottom: 3px;
  }
  .customer-page .log-acc-page .acc-wrapper .account-optional-action a:hover{
    color: {{ settings.color_primary }};
  }
  @media(max-width: 767px){
    .customer-page .log-acc-page .acc-wrapper h6{
      font-size: 14px;
    }
    .customer-page .log-acc-page .acc-wrapper .account-optional-action{
      margin-top: 10px;
    }
    .customer-page .log-acc-page .acc-wrapper .account-optional-action a{
      font-size: 14px;
    }
    .customer-page .log-acc-page .acc-wrapper{
      margin-top: 30px;
    }
  }

  /* error css */
  .customer-page .log-acc-page .errors{
    padding: 10px 15px;
    {% if settings.enable_rtl %}
    text-align: right;
    {% else %}
    text-align: left;
    {% endif %}
  }
  .customer-page .log-acc-page .errors ul{
    {% if settings.enable_rtl %}
    margin-right: 15px;
    margin-left: 0;
    {% else %}
    margin-left: 15px;
    {% endif %}
    list-style: square;
  }
  .customer-page .log-acc-page .errors ul li{
    margin-top: 5px;
  }
  .customer-page .log-acc-page .errors ul li:first-child{
    margin-top: 0px;
  }
</style>